{
    "name": "sun/planet",
    "description": "The Planet Framework.",
    "keywords": ["framework", "planet"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.0",
        "planet/framework": "v1.0-beta.4"
    },
    "autoload": {
        "psr-4": {
        "App\\": "app/"
      }
    },
    "scripts": {
      "post-install-cmd": [
        "composer dump -o"
      ],
      "post-update-cmd": [
        "composer dump -o"
      ],
      "post-root-package-install": [
        "php -r \"copy('.env.example', '.env');\""
      ],
      "post-create-project-cmd": [
        "php planet app:key"
      ]
    }
}
